<!-- views/posts/new.ejs -->
<!DOCTYPE html>
<html>
  
<head>
  <%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/css/team_header.css">
    <link rel="stylesheet" type="text/css" href="/css/new.css">
    <link href="https://fonts.googleapis.com/css2?family=Cute+Font&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <%- include('../partials/team_header') %>

    <section>
      <div class="post">
        <h2 class="title">Post 작성</h2>
        <form action="/posts" method="post" , enctype="multipart/form-data">

          <table>
            <tr>
              <th><span>팀명</span></th>
              <td>
                <select name="team" id="team">
                  <option value="tag">태그</option>
                  <option value="laon">라온</option>
                  <option value="tenser">텐서</option>
                  <option value="latte">라뗴</option>
                  <option value="core">코어</option>
                </select>
              </td>
            </tr>
            <tr>
              <th><span>메인사진</span></th>
              <td>
                <input type="file" id="image" name="image" class="form-control">
              </td>
            </tr>
            <tr>
              <th>
                <span>제목</span>
              </th>

              <td>
                <input type="text" id="title" name="title" value="" class="form-control">
              </td>
            </tr>
            <tr>
              <th>
                <span>내용</span>
              </th>
              <td>
                <textarea id="body" name="contents" rows="10" class="form-control" cols="100" wrap="hard"></textarea>
              </td>
            </tr>
          </table>


          <div>
            <a class="back-btn" onClick="history.go(-1)">Back</a>
            <button type="submit" class="submit-btn">Submit</button>
          </div>

        </form>

      </div>


    </section>
</body>

</html>