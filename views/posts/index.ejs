<!DOCTYPE html>
<html>

<head>

  <%- include('../partials/head') %>
    <link rel="stylesheet" type="text/css" href="/css/team.css">
    <link rel="stylesheet" type="text/css" href="/css/header.css">

</head>

<body>
  <%- include('../partials/header') %>
    <div id="top">
      <img id="teamTitle" src="/img/TagLogo.png">
      <span id="teamName">Team <%=team%></span>
    </div>

    <section>
      <div id="itemList">
        <table>
          <% if(posts==null || posts.length==0){ %>
            <span>There is no data to show :( </span>
            <% } else{%>

              <% posts.forEach(function(post, index) { %>
  
                  <td>
                    <div class="item">
                      <h4>
                        <%= post.title %>
                      </h4>
                      <img class="itemImg" src="/<%= post.image%>" data-id="<%= post._id %>"><br>
                      <div class="cons">
                        <img class="con" src="/img/heart.png">
                        <span class="heartCount"><strong>
                            <%=post.like%>
                          </strong></span>
                        <img class="con" src="/img/comment.png">
                        <span class="commentCount"><strong>
                            <%= post.comments.length%>
                          </strong></span>
                      </div>
                    </div>
                  </td>
                  
                <% })} %>
             




        </table>
      </div>

    </section>



    <% if(isAuthenticated) {%>
      <%if(currentUser.user.role=='관리자' ){%>
        <div>
          <a class="btn btn-primary" href="/posts/new">New</a>
        </div>
        <%}}%>
          <script src="../js/team.js"></script>
</body>

</html>