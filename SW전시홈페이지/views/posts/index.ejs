<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h2 class="mb-3"><%=team %>팀</h2>

      <table class="board-table table table-sm border-bottom">
        
        <thead class="thead-light">
          <tr>
            <th scope="col">Title</th>
            <th scope="col">img</th>
            <th scope="col" class="author">Author</th> <!-- 1 -->
            <th scope="col" class="author">comments</th> <!-- 1 -->
            <th scope="col" class="author">좋아요</th> <!-- 1 -->
            <th scope="col" class="date">Date</th>
          </tr>
        </thead>

        <tbody>
          <% if(posts == null || posts.length == 0){ %>
            <tr>
              <td colspan=5> There is no data to show :( </td>
            </tr>
          <% } %>
          <% posts.forEach(function(post) { %>
            <tr>
              <td>
                <a href="/posts/detail/<%= post._id %>"><div class="ellipsis"><%= post.title %></div></a>
              </td>
              <td class="img"> <!-- 2 -->
                <div class="ellipsis"><img src="<%= post.image%>" width="100px" height="100px" alt=""></div>
              </td>
              <td class="author"> <!-- 2 -->
                <div class="ellipsis"><%= post.author ? post.author : "" %></div>
              </td>
              <td class=""> <!-- 2 -->
                <div class="ellipsis"><%= post.comments.length%></div>
              </td>
              <td class="liked" >
                <span id="liked"><%=post.like%></span>
              </td>
              <td class="date">
                <span data-date="<%= post.createdAt %>"><%= post.createdAt %></span>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>

      </table>

      <div>
        <a class="btn btn-primary" href="/posts/new">New</a>
      </div>

    </div>
    <script>
     
    </script>
  </body>
</html>