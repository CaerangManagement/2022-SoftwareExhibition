<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">
      <h2 class="mb-3">Post 수정</h2>
      <form action="/posts/<%= post._id %>?_method=put" method="post", enctype="multipart/form-data">

        <div class="form-group">
          <label for="image">메인사진</label>
          <input type="file" id="image" name="image" class="form-control">
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" name="title" value="<%=post.title%>" class="form-control">
        </div>
        
        <div class="form-group">
          <label for="body">Body</label>
          <textarea id="body" name="contents" rows="5" class="form-control"><%=post.contents%>"</textarea>
        </div>

        

        <div>
          <a class="btn btn-primary" onClick="history.go(-1)">Back</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </form>

    </div>
  </body>
</html>